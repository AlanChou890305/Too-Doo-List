{
  "version": 2,
  "name": "taskcal-production",
  "git": {
    "deploymentEnabled": {
      "main": true,
      "develop": false
    }
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "headers": [
    {
      "source": "/app-ads.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain; charset=utf-8"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/auth/callback",
      "destination": "/auth/callback.html"
    },
    {
      "source": "/((?!app-ads\\.txt$).*)",
      "destination": "/index.html"
    }
  ]
}
