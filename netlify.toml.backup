# NETLIFY CONFIGURATION - BACKUP
# This file is kept as backup in case you need to switch back to Netlify
# Currently using Vercel for hosting
# 
# To use Netlify again:
# 1. Rename this file to netlify.toml
# 2. Update App.js redirect URLs to use Netlify domain
# 3. Deploy to Netlify

[build]
  # Build command for Expo web
  command = "npx expo export --platform web --output-dir dist"
  
  # Output directory for Expo web build
  publish = "dist"
  
  # Environment variables
  [build.environment]
    NODE_VERSION = "18"
    # Note: Set EXPO_PUBLIC_SUPABASE_URL and EXPO_PUBLIC_SUPABASE_ANON_KEY 
    # in Netlify dashboard under Site settings > Environment variables

# Redirect rules for SPA routing
# Exception: Serve auth callback page directly (with query parameters preserved)
[[redirects]]
  from = "/auth/callback"
  to = "/auth/callback.html :splat"
  status = 200
  force = true

[[redirects]]
  from = "/*"
  to = "/index.html"
  status = 200

# Headers for security and performance
[[headers]]
  for = "/*"
  [headers.values]
    X-Frame-Options = "DENY"
    X-XSS-Protection = "1; mode=block"
    X-Content-Type-Options = "nosniff"
    Referrer-Policy = "strict-origin-when-cross-origin"

# Cache static assets
[[headers]]
  for = "/static/*"
  [headers.values]
    Cache-Control = "public, max-age=31536000, immutable"

# Cache service worker
[[headers]]
  for = "/sw.js"
  [headers.values]
    Cache-Control = "public, max-age=0, must-revalidate"